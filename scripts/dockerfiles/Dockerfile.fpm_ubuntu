FROM ubuntu:18.04

ARG DEBIAN_FRONTEND=noninteractive
ARG APP_VERSION

RUN apt-get -y update && apt-get -y install --no-install-recommends \
      ruby=1:2.5.1 \
      ruby-dev=1:2.5.1 \
      build-essential=12.4ubuntu1 \
      && rm -rf /var/lib/apt/lists/*
RUN gem install --no-ri --no-rdoc fpm:1.11.0 pleaserun:0.0.30

WORKDIR /workdir

COPY sidedoor /workdir

RUN fpm -v $APP_VERSION -s pleaserun -t dir -n sidedoor /usr/bin/sidedoor
RUN printf "#!/bin/sh\nsh /usr/share/pleaserun/sidedoor/cleanup.sh\nrm -rf /usr/share/pleaserun/sidedoor/cleanup.sh\n" > /workdir/sidedoor.dir/usr/share/pleaserun/sidedoor/delete.sh
RUN fpm -v $APP_VERSION -n sidedoor -s dir -t deb --after-install /workdir/sidedoor.dir/usr/share/pleaserun/sidedoor/install.sh --before-remove /workdir/sidedoor.dir/usr/share/pleaserun/sidedoor/delete.sh /workdir/sidedoor=/usr/bin/ /workdir/sidedoor.dir/usr/share/pleaserun/=/usr/share/pleaserun

CMD ["/bin/bash"]
